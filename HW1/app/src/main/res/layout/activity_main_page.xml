<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:id="@+id/linear"
        android:orientation="horizontal"
        android:background="#d5dff2">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/users"
            android:textSize="22sp"
            android:background="@drawable/blue1"
            android:textStyle="bold|italic"
            android:textColor="#ffffff"
            android:typeface="serif"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">


        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Learn the Vocabulary"
            android:id="@+id/learn"
            android:background="@drawable/shapes"
            android:drawableBottom="@drawable/unnamed"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:textStyle="bold|italic" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Add New Words"
            android:id="@+id/addWords"
            android:background="@drawable/shapes"
            android:drawableBottom="@drawable/words"
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">


        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="QUIZ TIME !!"
            android:id="@+id/quiz"
            android:background="@drawable/shapes"
            android:drawableBottom="@drawable/quizzes"
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:textStyle="bold|italic" />

    </LinearLayout>


</LinearLayout>